<%- include("./partials/header") %>

<div class="SignInContainer">
  <div class="signInBoxTop">
    <h4>
      <img
        width="32"
        height="32"
        src="/images/icons8-cat-footprint-64 (1).png"
        alt="cat-footprint"
      />Glee
    </h4>
    <a class="text-decoration-none text-dark fs-4" href="/"
      ><i class="ri-close-line"></i
    ></a>
  </div>
  <div class="signInBoxContentDiv">
    <h3>MEET NEW IDEAS</h3>
    <span>
      <img src="/images/bracket-left.png" alt="" />
      <h5>
        10,000,000+ <br />
        DOWNLOADS
      </h5>
      <img src="/images/bracket-right.png" alt="" />
    </span>
    <img src="/images/catGif.gif" alt="" />
    <!-- <img src="/images/giphy (2).gif" alt=""> -->
  </div>

  <form action="/signup" method="post">
    <input class="w-50" type="text" placeholder="name" name="name" />
    <input class="w-50" type="text" placeholder="username" name="username" />
    <input class="w-50" type="email" placeholder="email" name="email" />
    <input class="w-50" type="password" placeholder="password" name="password" />
    <button>Sign-up</button>
    <h6>
      By signing in, you agree to our <span>Terms</span> and
      <span>Privacy Policy</span> |
      <a class="text-decoration-none" href="/getEmail">Forget Password?</a> | <a class="text-decoration-none" href="/signin">Signin</a>
    </h6>
  </form>
  
</div>

<%- include("./partials/footer") %>
